{% extends 'base.html.twig' %}

{% block title %}Magasin{% endblock %}

{% block body %}
    <h2>Magasin</h2>
    <form method="post" action="{{ path("panier_ajout") }}">
        <table>
            <tr>
                <th>Libelle</th>
                <th>Prix</th>
                <th>Stock</th>
                <th>Choix</th>
            </tr>
            {% for produit in produits %}
                <tr>
                    <td>{{ produit.label }}</td>
                    <td>{{ produit.price }}â‚¬</td>
                    <td>{{ produit.stock }}</td>
                    <td>
                        <label>
                            {#  {% set disableChoix = '' %}
                            {% if produit.stock == 0 %}
                            {% set disableChoix = 'disabled' %}
                            {% endif %} #}
                            <select {{ produit.stock == 0 ? 'disabled'  }} name="quantite[{{ produit.id }}]">
                                {% for i in 0..produit.getStock() %}
                                    <option value="{{ i }}">{{ i }}</option>
                                {% endfor %}
                            </select>
                        </label>
                    </td>
                </tr>
            {% endfor %}
        </table>
        <div>
            <button type="submit">Commander</button>
            <p><a href="{{ path("menu_main") }}" >Menu principal</a></p>
        </div>
    </form>
{% endblock %}
