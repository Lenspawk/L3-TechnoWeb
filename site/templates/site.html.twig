{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/site.css') }}" rel="stylesheet" />
{% endblock %}

{% block header %}
    <h1>Site de Simon et Guillaume</h1>
{% endblock %}

{% block main %}
        {% for label, messages in app.flashes(['success', 'warning', 'error']) %}
            {% for message in messages %}
                <div class="flash-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

    {% block content %}
    {% endblock %}
{% endblock %}

{% block footer %}
    <p>Projet L3 - Informatique | Technologies du Web 2</p>
{% endblock %}